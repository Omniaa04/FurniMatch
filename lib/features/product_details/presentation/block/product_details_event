// bloc/product_details_event.dart

part of 'product_details_bloc.dart';

abstract class ProductDetailsEvent {}

class FetchProductDetails extends ProductDetailsEvent {} // جلب بيانات المنتج عند بدء الشاشة

class ChangeColorEvent extends ProductDetailsEvent {
  final String newColor;
  ChangeColorEvent(this.newColor); // تغيير اللون المختار عند الضغط على زر لون
}